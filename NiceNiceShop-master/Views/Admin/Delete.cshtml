@model NNShop.Data.NhanVien

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Thông Tin Nhân Viên </h1>

<h3>Bạn có chắc muốn xóa?<h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Họ Tên</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class = "col-sm-2">
            <label>Mật Khẩu</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class = "col-sm-2">
            <label>Ngày Sinh</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaNv" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay Lại</a>
    </form>
</div>
