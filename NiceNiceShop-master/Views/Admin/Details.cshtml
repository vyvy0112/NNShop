@model NNShop.Data.NhanVien

@{
    ViewData["Title"] = "Details";
}

<h1>Mô Tả Thông Tin Nhân Viên</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Họ Tên</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class = "col-sm-2">
            <label>Mật Khẩu</label>
        </dt>
