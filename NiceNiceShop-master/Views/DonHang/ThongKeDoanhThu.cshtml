@{
    Layout = "_LayoutCustomer";
    var thongKe = ViewData["ThongKe"] as IEnumerable<dynamic>;
}

<h2>Thống kê doanh thu</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            @if (thongKe.FirstOrDefault()?.Ngay != null)
            {
                <th>Ngày</th>
            }
            else if (thongKe.FirstOrDefault()?.Thang != null)
            {
                <th>Tháng</th>
                <th>Năm</th>
            }
            else if (thongKe.FirstOrDefault()?.Nam != null)
            {
                <th>Năm</th>
            }
            <th>Tổng doanh thu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in thongKe)
        {
            <tr>
                @if (item.Ngay != null)
                {
                    <td>@item.Ngay?.ToString("dd/MM/yyyy")</td>
                }
                else if (item.Thang != null && item.Nam != null)
                {
                    <td>@item.Thang</td>
                    <td>@item.Nam</td>
                }
                else if (item.Nam != null)
                {
                    <td>@item.Nam</td>
                }
                <td>@item.TongDoanhThu?.ToString("/C") </td>
            </tr>
        }
    </tbody>
</table>
