@model NNShop.Data.HangHoa

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Thông Tin Hàng Hóa</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Tên Hàng Hóa</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenHh)
        </dd>
        <dt class="col-sm-2">
            <label>Mô Tả</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            <label>Chi Tiết</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChiTietHh)
        </dd>
        <dt class="col-sm-2">
            <label>Đơn Giá</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonGia)
        </dd>
        <dt class="col-sm-2">
            <label>Hình Ảnh</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hinh)
        </dd>
        <dt class="col-sm-2">
            <label>Giảm Giá</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiamGia)
        </dd>
        <dt class="col-sm-2">
            <label>Số Lượng</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class="col-sm-2">
            <label>Mã Loại</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaLoaiHhNavigation.MaLoaiHh)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaHh" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay Lại</a>
    </form>
</div>
