    ViewData["Title"] = "Edit";
}

<h1>Sửa Thông Tin Danh Mục Hàng Hóa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
