@model IEnumerable<NNShop.Data.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh Sách Nhân Viên</h1>

<p>
    <a asp-action="Create">Thêm Nhân Viên</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Mã Nhân Viên</label>
            </th>
            <th>
                <label>Họ Tên</label>
            </th>
            <th>
                <label>Ngày Sinh</label>
            </th>
            <th>
                <label>Role</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNv">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.MaNv">Mô Tả</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNv">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
